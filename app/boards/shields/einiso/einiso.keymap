#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/rgb.h>
#include <dt-bindings/zmk/outputs.h>

#define nubs NON_US_BSLH
#define sqot SINGLE_QUOTE


/ {
        combos {
        };

        keymap {
                compatible = "zmk,keymap";

                default_layer {
//    ------------------------------------------------------         -------------------------------------------------------
//    |   ESC  |    Q   |    W   |    E   |    R   |    T   |        |    Y   |    U   |    I   |    O   |    P   |   DEL  |
// ----------------------------------------------------------        ----------------------------------------------------------
// |    TAB    |    A   |    S   |    D   |    F   |    G   |        |    H   |    J   |    K   |    L   |    '   |    BKSP   |
// ----------------------------------------------------------        ----------------------------------------------------------
//           |          |    Y   |    X   |    C   |    V   |        |    B   |    N   |    M   |    .   |         |
//            -   CTRL  |------------------------------------        -------------------------------------- RETURN |
//             |        |   GUI  |   ALT  |   NUM  |  SHIFT |        |  SPACE |  RAISE |  ALTGR |    -     |       |
//             ----------------------------------------------        -----------------------------------------------
          bindings = <
              &kp ESC   &kp Q   &kp W      &kp E      &kp R   &kp T       /*split*/   &kp Y       &kp U   &kp I      &kp O     &kp P          &kp DEL
            &kp TAB     &kp A   &kp S      &kp D      &kp F   &kp G       /*split*/   &kp H       &kp J   &kp K      &kp L     &kp LS(BSLH)     &kp BSPC
                     &kp CTRL   &kp Y      &kp X      &kp C   &kp V       /*split*/   &kp B       &kp N   &kp M      &kp DOT     &kp RET
                                &kp LGUI   &kp LALT   &mo 1   &kp LSHFT   /*split*/   &kp SPACE   &mo 2   &kp RALT   &kp FSLH    
          >;
                };

                num_layer {
//    ------------------------------------------------------         -------------------------------------------------------
//    |   ESC  |  HOME  |   UP   |   END  |  PGDN  |   xx   |        |    7   |    8   |    9   |    +   |    %   |   DEL  |
// ----------------------------------------------------------        ----------------------------------------------------------
// |    TAB    |  LEFT  |  DOWN  |  RIGHT |  PGUP  |   xx   |        |    4   |    5   |    6   |    *   |    xx  |    BKSP   |
// ----------------------------------------------------------        ----------------------------------------------------------
//           |          |   xx   |   xx   |   xx   |   xx   |        |    1   |    2   |    3   |    /   |         |
//            -   CTRL  |------------------------------------        -------------------------------------- RETURN |
//             |        |   GUI  |   ALT  |   NUM  |  SHIFT |        |    0   |    .   |   FN   |    -     |       |
//             ----------------------------------------------        -----------------------------------------------
          bindings = <
              &kp ESC   &kp HOME   &kp UP     &kp END     &kp PG_UP   &none       /*split*/   &kp N7   &kp N8    &kp N9      &kp RBKT       &kp LS(N5)   &kp DEL
            &kp TAB     &kp LEFt   &kp DOWN   &kp RIGHT   &kp PG_DN   &none       /*split*/   &kp N4   &kp N5    &kp N6      &kp LS(RBKT)   &kp LS(BSLH)     &kp BSPC
                     &kp CTRL      &none      &none       &none       &none       /*split*/   &kp N1   &kp N2    &kp N3      &kp LS(N7)     &kp RET
                                   &kp LGUI   &kp LALT    &mo 1       &kp LSHFT   /*split*/   &kp N0   &kp DOT   &mo 3       &kp FSLH     
          >;
              };

                raise_layer {
//    ------------------------------------------------------         -------------------------------------------------------
//    |   ESC  |    ?   |    !   |    ^   |    $   |    [   |        |    ]   |    ü   |    "   |    ö   |    #   |   DEL  |
// ----------------------------------------------------------        ----------------------------------------------------------
// |    TAB    |    ä   |    ß   |    |   |    <   |    >   |        |    =   |    (   |    )   |   xx   |   xx   |    BKSP   |
// ----------------------------------------------------------        ----------------------------------------------------------
//           |          |    \   |    &   |    `   |   xx   |        |   xx   |    {   |    }   |   xx   |         |
//           ---  CTRL  |------------------------------------        ---------------------------------------  RET  |
//             |        |   GUI  |   ALT  |   xx   |  SHIFT |        |  SPACE |  RAISE |  ALTGR |    -     |       |
//             ----------------------------------------------        -----------------------------------------------
          bindings = <
              &kp ESC   &kp LS(MINUS)   &kp LS(N1)      &kp GRAVE      &kp LS(N4)      &kp RA(N8)     /*split*/   &kp RA(N9)   &kp LBTK     &kp LS(N2)   &kp SEMI   &kp BSLH   &kp DEL
            &kp TAB     &kp SQT         &kp MINUS       &kp RA(nubs)   &kp nubs        &kp LS(nubs)   /*split*/   &kp LS(N0)   &kp LS(N8)   &kp LS(N9)   &none      &kp none     &kp BSPC
                     &kp CTRL           &kp RA(MINUS)   &kp LS(N6)     &kp LS(EQUAL)   &none          /*split*/   &none        &kp RA(N7)   &kp RA(N0)   &none      &kp RET
                                        &kp LGUI        &kp LALT       &none           &kp LSHFT      /*split*/   &kp SPACE    &mo 2        &kp RALT     &kp FSLH     
          >;
                };

                fn_layer {
//    ------------------------------------------------------         -------------------------------------------------------
//    |   ESC  |   xx   |   xx   |   xx   |   xx   |   xx   |        |   F7   |   F8   |   F9   |  F10   |   xx   |   DEL  |
// ----------------------------------------------------------        ----------------------------------------------------------
// |    TAB    |   xx   |   xx   |   xx   |   xx   |   xx   |        |   F4   |   F5   |   F6   |  F11   |   xx   |    BKSP   |
// ----------------------------------------------------------        ----------------------------------------------------------
//           |          |   xx   |   xx   |   xx   |   xx   |        |   F1   |   F2   |   F3   |  F12   |         |
//           ---  CTRL  |------------------------------------        ---------------------------------------  RET  |
//             |        |   GUI  |   ALT  |   NUM  |  SHIFT |        |  SPACE |   xx   |   FN   |    xx    |       |
//             ----------------------------------------------        -----------------------------------------------
          bindings = <
              &kp ESC   &none   &none      &none      &none   &none       /*split*/   &kp F7      &kp F8   &kp F9   &kp F10   &kp none   &kp DEL
            &kp TAB     &none   &none      &none      &none   &none       /*split*/   &kp F4      &kp F5   &kp F6   &kp F11   &kp none     &kp BSPC
                     &kp CTRL   &none      &none      &none   &none       /*split*/   &kp F1      &kp F2   &kp F3   &kp F12   &kp RET
                                &kp LGUI   &kp LALT   &mo 1   &kp LSHFT   /*split*/   &kp SPACE   &none    &mo 3    &none     
          >;
                };
        };
};
